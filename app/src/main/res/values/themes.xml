<resources>
    <!-- Base application theme. -->
    <style name="Theme.Material_design" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?myColor</item>
        <item name="colorPrimaryVariant">?myColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textInputStyle">@style/MyTextInputLayoutStyle</item>
        <item name="chipStyle">@style/MyChipStyle</item>
        <!-- Secondary brand color. -->
        <item name="myColor">@color/yellow</item>

        <item name="colorSecondary">?myColor</item>
        <item name="colorSecondaryVariant">?myColor</item>
        <item name="colorOnSecondary">?myColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        //
        <item name="textAppearanceLabelLarge">@style/MyTextAppearanceLabelLarge</item>
        <!-- <item name="shapeAppearanceSmallComponent">@style/MyShapeAppearanceSmallComponent</item>-->

    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyTextAppearanceLabelLarge" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="fontFamily">@font/roboto</item>
        <item name="textInputStyle">@font/roboto</item>
        <item name="android:textSize">@dimen/size_my_text_appearance_label_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/my_text_appearance_letter_spacing</item>

    </style>

    <style name="myThemeBrown" parent="Theme.Material_design">
        <item name="myColor">@color/brown</item>
    </style>

    <style name="myThemeGreen" parent="Theme.Material_design">
        <item name="myColor">@color/green</item>
    </style>

    <style name="myThemeYellow" parent="Theme.Material_design">
        <item name="myColor">@color/yellow</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">@color/text_input_layout_color</item>
        <item name="counterTextColor">@color/text_input_layout_color</item>
        <item name="hintTextColor">@color/text_input_layout_color</item>

    </style>

    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <!-- <item name="shapeAppearance">@style/MyShapeAppearanceSmallComponent</item>-->
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearanceSmallComponent</item>
        <item name="chipBackgroundColor">@drawable/my_selector_background_chip</item>
        <item name="rippleColor">@color/chip_ripl_color</item>
        <item name="chipStartPadding">@dimen/chip_start_padding</item>
        <item name="chipEndPadding">@dimen/chip_end_padding</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>