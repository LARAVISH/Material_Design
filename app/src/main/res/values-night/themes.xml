<resources>
    <!-- Base application theme. -->
    <style name="Theme.Material_design" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="myColor">@color/red</item>
        <item name="colorPrimary">?myColor</item>
        <item name="colorPrimaryVariant">?myColor</item>
        <item name="colorOnPrimary">?myColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?myColor</item>
        <item name="colorSecondaryVariant">?myColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>